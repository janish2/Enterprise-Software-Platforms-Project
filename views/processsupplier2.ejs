<!DOCTYPE html>

<html lang="en"><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">


    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">


    <title>Home Page</title>

    <!-- Bootstrap core CSS -->
    <style>

        html,
        body {
            overflow-x: hidden; /* Prevent scroll on narrow devices */
        }
        body {
            padding-top: 70px;
        }
        footer {
            padding: 30px 0;
        }

        @media screen and (max-width: 767px) {
            .row-offcanvas {
                position: relative;
                -webkit-transition: all .25s ease-out;
                -o-transition: all .25s ease-out;
                transition: all .25s ease-out;
            }

            .row-offcanvas-right {
                right: 0;
            }

            .row-offcanvas-left {
                left: 0;
            }

            .row-offcanvas-right
            .sidebar-offcanvas {
                right: -50%; /* 6 columns */
            }

            .row-offcanvas-left
            .sidebar-offcanvas {
                left: -50%; /* 6 columns */
            }

            .row-offcanvas-right.active {
                right: 50%; /* 6 columns */
            }

            .row-offcanvas-left.active {
                left: 50%; /* 6 columns */
            }

            .sidebar-offcanvas {
                position: absolute;
                top: 0;
                width: 50%; /* 6 columns */
            }
        }
        .logoutLblPos{

            position:fixed;
            right:10px;
            top:5px;
        }

    </style>

</head>

<body padding-top: 50x; padding-bottom:20px;>
<div ng-app="MtaaS" data-ng-controller="MtaaS1">

    <nav class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#" ng-click ="home">Acumen SIM</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#" ng-click= "home()">Home</a></li>
                    <li><a href="#" ng-click= "searchsupplier()">Search</a></li>
                    <li class="active"><a href="#" ng-click= "processsupplier()">Process</a></li>
                </ul>
                <label class="logoutLblPos">
                    <a type="submit" align="right" class="btn btn-success" ng-click="logoutsession()" role="button" >Logout</a>
                </label>
            </div><!-- /.nav-collapse -->
        </div><!-- /.container -->
    </nav><!-- /.navbar -->

    <div class="container">

        <div class="row row-offcanvas row-offcanvas-right">

            <div class="col-xs-12 col-sm-9">
                <p class="pull-right visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                </p>
                <div class="jumbotron">
                    <div class="form-group">
                        <legend>Search Process ID</legend>
                        <input type="text" placeholder="Enter Process ID" class="form-control" typeahead-on-select="processSearch($process)">
                    </div>
                    <a type="submit" class="btn btn-success" href="#" ng-click="processsupplier()" role="button">Search Process</a><p></p>
                    <!-- Table -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Process ID</th>
                                    <th>Supplier Name</th>
                                    <th>Process Type</th>
                                    <th>Process Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr ng-repeat="process in processes| filter: search" class="even gradeC">
                                    <td>{{process.process_id}}</td>
                                    <td>{{process.suppliername}}</td>
                                    <td>{{process.process_type}}</td>
                                    <td>{{process.process_status}}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- Table End-->
                    </div>

                </div><!--/.col-xs-12.col-sm-9-->

            </div><!--/row-->

        </div><!--/.container-->
    </div> <!-- div for controller -->

    <script>
        var app=angular.module('MtaaS', []);
        app.controller('MtaaS1', ['$scope', '$http', '$window', function ( $scope,$http,$window)
        {

            $scope.processsupplierdetails = function() {
                $http({
                    method: 'GET',
                    url: '/processsupplierdetails',
                }).success(function(response){
                    //alert(JSON.stringify(response));
                    $scope.processes= JSON.parse(response.result);
                }).error(function(error){
                    //alert("ERROR VIEWING PROCESS REQUEST");
                });
            };
            $scope.processsupplierdetails();

            $scope.logoutsession= function () {
                //alert("in logout session");
                $http({
                    method: 'GET',
                    url: '/logoutsession'
                }).
                then(function(response)
                {
                    if(response.data.status===300)
                    {
                        console.log("destroy session");
                    }else
                    {
                        $window.location.href='/';
                    }
                });
            }

            $http({
                method: 'GET',
                url: '/checklogin'
            }).
            then(function(response)
            {
                if(response.data.status===300)
                {
                    $window.location.href='/';
                }
            });




            $scope.logoutsession= function () {
                //alert("in logout session");
                $http({
                    method: 'GET',
                    url: '/logoutsession'
                }).
                then(function(response)
                {
                    if(response.data.status===300)
                    {
                        console.log("destroy session");
                    }else
                    {
                        $window.location.href='/';
                    }
                });
            }



            $scope.searchsupplier = function (){
                $window.location.href = '/searchsupplier';
            }
            $scope.processsupplier = function (){
                $window.location.href = '/processsupplier';
            }
            $scope.home = function (){
                $window.location.href = '/home';
            }

        }]);
    </script>

</body></html>